{% extends 'base.twig' %}
{% block body %}
    <div class="row">
        <div class="col-md-4 col-md-offset-4" style="position: relative; height: 100%">
            <div class="dullahan-box dullahan-box-login center-vertically">
                <h1 style="font-size: 32px">Please log in</h1>
                <form method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <input type="submit" class="btn btn-block btn-primary" value="Login">
                    <a class="btn btn-link btn-block">Forgot password?</a>
                </form>
            </div>
        </div>
    </div>
{% endblock %}